<div class="invoice-container">

  <h2 class="text-light mt-2">Create New Invoice</h2>
  <form id="newInvoiceForm" class="row g-3">
    <div id="invoice-container" class="row justify-content-center">

      <div class="col-md-6">
        <div class="field input-field">
          <input
            type="text"
            placeholder="First Name"
            class="input p-3"
            id="inputFirst"
          />
        </div>
      </div>

      <div class="col-md-6">

        <div class="field input-field">
          <input
            type="text"
            placeholder="Last Name"
            class="input p-3"
            id="inputLast"
          />
        </div>

      </div>

      <div class="col-md-6">
        <div class="field input-field mt-3">
          <input
            type="text"
            placeholder="Email"
            class="input p-3"
            id="inputEmail"
          />
        </div>
      </div>

      <div class="col-md-6">
        <div class="field input-field mt-3">
          <input
            type="text"
            placeholder="Phone"
            class="input p-3"
            id="inputPhone"
          />
        </div>
      </div>

      <div class="col-12">
        <div class="field input-field mt-3">
          <input
            type="text"
            class="input p-3"
            id="inputAddress"
            placeholder=" Address ( 1234 Main St) "
          />
        </div>
      </div>

      <div class="col-12">

        <div class="field input-field mt-3">
          <input
            type="text"
            class="input p-3"
            id="inputAddress2"
            placeholder=" Apartment, studio, or floor "
          />
        </div>
      </div>
      <div class="col-md-6">
        <div class="field input-field mt-3">
          <input
            type="text"
            class="input p-3"
            id="inputCity"
            placeholder="City"
          />
        </div>
      </div>
      <div class="col-md-4">
        <div class="field input-field mt-3">
          <input
            type="text"
            class="input p-3"
            id="inputState"
            placeholder="State"
          />
        </div>
      </div>
      <div class="col-md-2">
        <div class="field input-field mt-3">
          <input
            type="text"
            class="input p-3"
            id="inputZip"
            placeholder="Zip"
          />
        </div>
      </div>

      <div class="col-md-6">
        <div class="field input-field mt-3">
          <input
            type="text"
            class="input p-3"
            id="inputDescription"
            placeholder="Description"
          />
        </div>
      </div>
      <div class="col-md-4">
        <div class="field input-field mt-3">
          <input
            type="text"
            class="input p-3"
            id="inputItem"
            placeholder="Item"
          />
        </div>
      </div>
      <div class="col-md-2">
        <div class="field input-field mt-3">
          <input
            type="text"
            class="input p-3"
            id="inputCost"
            placeholder="Cost"
          />
        </div>
      </div>
      <div class="col-12">

        <hr />

        <button type="submit" class="btn btn-primary create-invoice">Create
          Invoice</button>
      </div>
    </div>
  </form>
  <hr />

  <hr />

  <div id="invoice_container" style="width:100%" class="row">

    <div
      class="d-flex flex-column mb-2 mt-2"
      style="width:100%;margin-top: 10px;"
    >
      <h2 class="text-light">Your Invoices</h2>
      {{#each invoices as |invoice|}}

        <div class="card" style="width: 100%;">

          <div class="d-flex flex-column justify-content-center" style="">

            <div class="d-flex justify-content-start">
              <div
                class="d-flex flex-grow-1 justify-content-start align-items-start"
              >
                <div
                  class="d-flex flex-column align-items-start"
                  style="margin-left: 20px;margin-top: 20px;"
                >
                  <h5 class="card-title">Name :
                    {{invoice.first_name}}
                    {{invoice.last_name}}</h5>

                  <p class="card-text">
                    Order Description:
                    {{invoice.description}}
                  </p>
                  <p class="card-text">
                    Order Cost: ${{invoice.cost}}
                  </p>
                </div>
              </div>
            </div>

            <div class="d-flex flex-grow-1">

              <div class="d-flex col-12 flex-grow-1 justify-content-center">

                <div
                  class="col-12 col-md-10 hh-grayBox pt45 pb20 justify-content-center"
                >

                  {{#ifEquals invoice.status "placed"}}
                    <div class="row justify-content-between">
                      <div class="order-tracking completed">
                        <span class="is-complete"></span>
                        <p>Placed <br /><span></span></p>
                      </div>
                      <div class="order-tracking">
                        <span class="is-complete"></span>
                        <p>Shipped<br /><span></span></p>
                      </div>
                      <div class="order-tracking">
                        <span class="is-complete"></span>
                        <p>Delivered<br /><span></span></p>
                      </div>
                    </div>
                  {{/ifEquals}}
                  {{#ifEquals invoice.status "shipped"}}
                    <div class="row justify-content-between">
                      <div class="order-tracking completed">
                        <span class="is-complete"></span>
                        <p>Placed <br /><span></span></p>
                      </div>
                      <div class="order-tracking completed">
                        <span class="is-complete"></span>
                        <p>Shipped<br /><span></span></p>
                      </div>
                      <div class="order-tracking">
                        <span class="is-complete"></span>
                        <p>Delivered<br /><span></span></p>
                      </div>
                    </div>
                  {{/ifEquals}}
                  {{#ifEquals invoice.status "delivered"}}
                    <div class="row justify-content-between">
                      <div class="order-tracking completed">
                        <span class="is-complete"></span>
                        <p>Placed <br /><span></span></p>
                      </div>
                      <div class="order-tracking completed">
                        <span class="is-complete"></span>
                        <p>Shipped<br /><span></span></p>
                      </div>
                      <div class="order-tracking completed">
                        <span class="is-complete"></span>
                        <p>Delivered<br /><span></span></p>
                      </div>
                    </div>
                  {{/ifEquals}}

                </div>
              </div>
            </div>

            <div class="d-flex justify-content-end p-2">
              <button class="btn btn-danger" data-id="{{invoice.id}}">Delete
                Invoice</button>
            </div>

          </div>
        </div>
      {{/each}}
    </div>
  </div>
</div>

<script src="/js/invoice.js"></script>