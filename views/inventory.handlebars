{{#if logged_in}}
    <nav>
      <button class="btn btn-light" id="dashboard">Dashboard</button>
      <button class="btn btn-light" id="logout">Logout</button>
    </nav>
    {{/if}}

{{#if userItems}}
  <h2>Your Inventory:</h2>

  {{#each userItems as |item| }}
    <div class="row align-center mb-5">
      <div class="col-md-6">
        <h5>{{item.name}}</h5>
        <p>Quantity: {{item.quantity}}</p>
        <p>Cost: ${{item.cost}}</p>
        <p>Retail: ${{item.retail}}</p> 
      </div>
    </div>
  {{/each}}
{{else}}
  <p>No items in your inventory yet.</p>
{{/if}}

