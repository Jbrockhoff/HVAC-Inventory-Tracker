

<div class="form-container">

<div class="form login">
    <div class="form-content">
        <header>Login</header>
        <form class='login-form'>
            <div class="field input-field">
                <input type="email" placeholder="Email" class="input" id="email-login" >
            </div>
            <div class="field input-field">
                <input type="password" placeholder="Password" class="password" id="password-login">
                <i class='bx bx-hide eye-icon'></i>
            </div>
            <div class="field">
                <button class="field button-field" type="submit">Login in</button>
            </div>
            <div class="form-link">
                <span>Don't have an account? <a href="#" class="link signup-link">Signup</a></span>
            </div>
        </form>
    </div>
</div>

<div class="form signup-form">
    <div class="form-content">
        <header>Signup</header>
        <form action="#">
            <div class="field input-field">
                <input type="text" placeholder="Name" class="input" id="name-signup">
            </div>
            <div class="field input-field">
                <input type="email" placeholder="Email" class="password" id="email-signup" >
            </div>
            <div class="field input-field">
                <input type="password" placeholder="Password" class="password" id="password-signup">
                <i class='bx bx-hide eye-icon'></i>
            </div>
            <div class="field button-field">
                <button class="field button-field" type="submit">Sign Up</button>
            </div>
        </form>
        <div class="form-link">
            <span>Already have an account? <a href="#" class="link login-link">Login</a></span>
        </div>
    </div>
</div>

</div>

</div>
</div>

<script src="/js/login.js"></script>
<script> 
  const formInputs = document.querySelectorAll('.form-input');
  formInputs.forEach(input => {
    input.style.fontSize = '18px'; 
    input.style.lineHeight = '1.5';
  });
</script>
